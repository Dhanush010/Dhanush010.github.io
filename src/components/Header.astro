---
import { siteConfig } from "../config";

const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

<header
  id="header"
  class="fixed top-0 left-1/2 transform -translate-x-1/2 z-50 hidden md:block transition-all duration-300 pt-3"
>
  <div class="bg-white/20 backdrop-blur-xl border border-white/20 rounded-2xl shadow-lg px-4 py-2">
    <nav>
      <ul class="flex items-center gap-4">
        <li>
          <a
            href="#about"
            class="text-blue-600 hover:text-blue-200 transition-all duration-500 ease-out font-medium px-3 py-2 rounded-lg hover:scale-105"
          >
            About
          </a>
        </li>
        {
          hasProjects && (
            <li>
              <a
                href="#projects"
                class="text-blue-600 hover:text-blue-200 transition-all duration-500 ease-out font-medium px-3 py-2 rounded-lg hover:scale-105"
              >
                Projects
              </a>
            </li>
          )
        }
        {
          hasExperience && (
            <li>
              <a
                href="#experience"
                class="text-blue-600 hover:text-blue-200 transition-all duration-500 ease-out font-medium px-3 py-2 rounded-lg hover:scale-105"
              >
                Experience
              </a>
            </li>
          )
        }
        {
          hasEducation && (
            <li>
              <a
                href="#education"
                class="text-blue-600 hover:text-blue-200 transition-all duration-500 ease-out font-medium px-3 py-2 rounded-lg hover:scale-105"
              >
                Education
              </a>
            </li>
          )
        }
      </ul>
    </nav>
  </div>
</header>

<script>
  // Header scroll effect - boxy frosted glass container
  window.addEventListener("scroll", () => {
    const header = document.getElementById("header");
    const glassContainer = header?.querySelector('div');
    if (window.scrollY > 100) {
      glassContainer?.classList.add("bg-white/30", "backdrop-blur-2xl", "shadow-xl");
      glassContainer?.classList.remove("bg-white/20", "backdrop-blur-xl", "shadow-lg");
    } else {
      glassContainer?.classList.remove("bg-white/30", "backdrop-blur-2xl", "shadow-xl");
      glassContainer?.classList.add("bg-white/20", "backdrop-blur-xl", "shadow-lg");
    }
  });
</script>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
